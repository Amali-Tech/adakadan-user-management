{
  "name": "adakadan",
  "version": "1.0.0-alpha",
  "main": "app.js",
  "license": "MIT",
  "keywords": [
    "apartment",
    "land",
    "landscape",
    "studio",
    "space",
    "rent",
    "flat",
    "property",
    "management",
    "house",
    "home"
  ],
  "description": "Rent, Land, Space and Property hunting and management platforms for landlords, owner, tenants, occupants and renters",
  "repository": {
    "type": "git",
    "url": ""
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "scripts": {
    "prisma": "prisma",
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/app.ts",
    "start": "npm run build && node --unhandled-rejections=strict ./dist/app.js",
    "debug": "set DEBUG=* && npm run start",
    "unit-test": "jest --watch",
    "test": "jest -c test/**test.ts",
    "test:coverage": "jest --coverage -c",
    "test-debug": "set DEBUG=app && npm test",
    "lint": "eslint .",
    "migrate": "npx prisma migrate dev",
    "generate": "npx prisma generate ",
    "update-db": "npx prisma db push",
    "studio": "npx prisma studio",
    "seed": "npx prisma db seed",
    "update-schema": "npx prisma db pull",
    "reset-db": "npx prisma migrate reset"
  },
  "dependencies": {
    "@prisma/client": "^4.15.0",
    "bcrypt": "^5.1.1",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "nodemailer": "^6.9.3",
    "useragent": "^2.3.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.5",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.198",
    "@types/nodemailer": "^6.4.8",
    "@types/prettier": "^2.7.2",
    "@types/supertest": "^2.0.12",
    "@types/useragent": "^2.3.2",
    "@types/uuidv4": "^5.0.0",
    "chai": "^4.3.7",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "prisma": "^4.15.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "tslint": "^6.1.3",
    "typescript": "^5.0.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80
  }
}
